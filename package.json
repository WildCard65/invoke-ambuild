{
  "name": "invoke-ambuild",
  "version": "1.0.0",
  "description": "A GitHub action dedicated to invoking [AMBuild](https://github.com/alliedmodders/ambuild)",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint index.js",
    "package": "ncc build index.js -o dist"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "root": true,
    "env": {
      "commonjs": true,
      "es2017": true,
      "node": true
    },
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2020
    },
    "rules": {
      "indent": [
        "error",
        4,
        {
          "SwitchCase": 1
        }
      ],
      "semi": "error",
      "comma-dangle": "error"
    }
  },
  "eslintIgnore": ["src/ts/*.ts", "dist/*.js"],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WildCard65/invoke-ambuild.git"
  },
  "keywords": [
    "GitHub",
    "Actions",
    "JavaScript"
  ],
  "author": "WildCard65",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/WildCard65/invoke-ambuild/issues"
  },
  "homepage": "https://github.com/WildCard65/invoke-ambuild#readme",
  "devDependencies": {
    "@vercel/ncc": "^0.24.0",
    "eslint": "^7.7.0"
  },
  "dependencies": {
    "@actions/core": "^1.2.4",
    "@actions/github": "^4.0.0",
    "@actions/io": "^1.0.2"
  }
}
